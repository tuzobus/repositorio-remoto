<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Lab18: Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<main role="main" class="container">
<div class="container">
    <div class="auth-container bg-white">
        <h1 class="mb-4">REGISTRO</h1>

        <form action="/auth/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="form-group">
                <label for="usuarioNombre" class="form-label">Nombre de usuario</label>
                <input
                        type="text"
                        name="usuarioNombre"
                        id="usuarioNombre"
                        class="form-control"
                        required
                        autofocus
                >
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Contraseña</label>
                <input
                        type="password"
                        name="password"
                        id="password"
                        class="form-control"
                        required
                        minlength="6"
                >
                <div class="password-requirements mt-1">
                    Mínimo 6 caracteres
                </div>
            </div>

            <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirmar contraseña</label>
                <input
                        type="password"
                        name="confirmPassword"
                        id="confirmPassword"
                        class="form-control"
                        required
                        minlength="6"
                >
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg mt-3">Registrarse</button>
            </div>
        </form>

        <div class="mt-3">
            <a href="/auth/login" class="text-decoration-none">Inicio de sesión</a>
        </div>
    </div>
</div>

<script>
    document.querySelector('form').addEventListener('submit', function(e) {
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        if (password !== confirmPassword) {
            e.preventDefault();
            alert('Las contraseñas no coinciden');
        }
    });
</script>
</main>
</body>